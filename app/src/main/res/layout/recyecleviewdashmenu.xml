<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
            android:id="@+id/cardgambar"
            android:layout_width="wrap_content"
            android:layout_height="220dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="2dp"
            app:cardUseCompatPadding="true">
            <ImageView
                android:id="@+id/gambarmenu"
                android:layout_width="170dp"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:src="@drawable/makanan1" >
            </ImageView>

        <RelativeLayout
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cardgambar"
            android:layout_marginTop="120dp">

            <TextView
                android:id="@+id/tittlemenugambar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Moonbe Chicken Special Bowl"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/idmenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:text="id"/>

            <TextView
                android:id="@+id/jumlah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:text="id"/>


            <TextView
                android:id="@+id/bank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:text="bca"/>

            <TextView
                android:id="@+id/titleharga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tittlemenugambar"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:fontFamily="sans-serif-condensed-light"
                android:text="harga"
                android:textSize="13dp" />

            <CheckBox
                android:id="@+id/add"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dp"
                android:layout_marginEnd="0dp"

                android:textAllCaps="false"
                android:textSize="15dp"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/titleharga"
                android:layout_alignParentStart="true"
                android:layout_marginStart="5dp">
                <Button
                    android:id="@+id/buttonSubtract"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="-" />

                <TextView
                    android:id="@+id/textViewQuantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="0" />

                <Button
                    android:id="@+id/buttonAdd"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="+" />

            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>